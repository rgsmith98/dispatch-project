<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".AddProductFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Product"
            android:layout_marginTop="15sp"
            android:layout_marginLeft="15sp"
            android:layout_marginBottom="10sp"
            android:fontFamily="@font/application_font"
            android:textSize="20dp"
            android:textColor="#000"
            android:textStyle="bold|normal"/>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp">

            <androidx.cardview.widget.CardView
                android:id="@+id/part_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="#DCDCDC"
                android:layout_marginBottom="15sp">

                <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5sp"
                android:paddingBottom="5sp"
                android:paddingRight="5sp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/part_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Part Name"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:fontFamily="@font/application_font"
                    android:textColorHint="#000"
                    android:backgroundTint="@android:color/holo_blue_dark"
                    android:inputType="text"
                    android:drawableLeft="@drawable/part_name"
                    android:drawablePadding="10sp"/>

            </com.google.android.material.textfield.TextInputLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/part_number_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_below="@id/part_name_layout"
                app:cardBackgroundColor="#DCDCDC"
                android:layout_marginBottom="15sp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5sp"
                    android:paddingBottom="5sp"
                    android:paddingRight="5sp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/part_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Part Number"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:fontFamily="@font/application_font"
                        android:textColorHint="#000"
                        android:backgroundTint="@android:color/holo_blue_dark"
                        android:inputType="text"
                        android:drawableLeft="@drawable/part_number"
                        android:drawablePadding="10sp"/>

                </com.google.android.material.textfield.TextInputLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/part_price_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_below="@id/part_number_layout"
                app:cardBackgroundColor="#DCDCDC"
                android:layout_marginBottom="15sp">

                <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5sp"
                android:paddingBottom="5sp"
                android:paddingRight="5sp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/part_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Part Price"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:fontFamily="@font/application_font"
                        android:textColorHint="#000"
                        android:backgroundTint="@android:color/holo_blue_dark"
                        android:inputType="number"
                        android:drawableLeft="@drawable/part_price"
                        android:drawablePadding="10sp"/>

                </com.google.android.material.textfield.TextInputLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/part_description_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_below="@id/part_price_layout"
                app:cardBackgroundColor="#DCDCDC"
                android:layout_marginBottom="15sp">

                <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5sp"
                android:paddingBottom="5sp"
                android:paddingRight="5sp">

                    <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/part_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Description"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:fontFamily="@font/application_font"
                    android:textColorHint="#000"
                    android:backgroundTint="@android:color/holo_blue_dark"
                    android:inputType="text"
                    android:drawableLeft="@drawable/part_description"
                    android:drawablePadding="10sp"/>

                </com.google.android.material.textfield.TextInputLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/part_stock_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_below="@id/part_description_layout"
                app:cardBackgroundColor="#DCDCDC"
                android:layout_marginBottom="15sp">

                <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5sp"
                android:paddingBottom="5sp"
                android:paddingRight="5sp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/part_available_stock"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Available Stock"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:fontFamily="@font/application_font"
                        android:textColorHint="#000"
                        android:backgroundTint="@android:color/holo_blue_dark"
                        android:inputType="number"
                        android:drawableLeft="@drawable/available_stock"
                        android:drawablePadding="10sp"/>

                </com.google.android.material.textfield.TextInputLayout>

            </androidx.cardview.widget.CardView>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/addProductButtonlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:layout_below="@id/part_stock_layout">

                <Button
                    android:id="@+id/btnAddProduct"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:text="Add Product"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp"
                    android:background="@drawable/round_button"
                    android:fontFamily="@font/application_font"
                    android:textColor="#FFF"
                    android:textSize="18sp"/>

            </com.google.android.material.textfield.TextInputLayout>

        </RelativeLayout>
    </LinearLayout>

</ScrollView>